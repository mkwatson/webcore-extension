{
    "manifest_version": 3,
    "name": "Webcore Extension",
    "version": "0.1.0",
    "action": {
      "default_icon": {
        "16": "icons/default-16.png",
        "32": "icons/default-32.png",
        "48": "icons/default-48.png",
        "128": "icons/default-128.png"
      },
      "default_title": "WebCore Extension (Inactive)"
    },
    "background": {
      "service_worker": "background/background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": [
          "utils/DebugLogger.js",
          "content/SidebarPanel.js", 
          "content/content.js"
        ]
      }
    ],
    "permissions": ["storage", "tabs"],
    "host_permissions": ["<all_urls>"],
    "web_accessible_resources": [
      {
        "resources": ["debug.html", "debug.js"],
        "matches": ["<all_urls>"]
      }
    ]
  }