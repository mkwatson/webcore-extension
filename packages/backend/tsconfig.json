{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node (Backend)",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@webcore/shared/*": ["../shared/src/*"]
    },
    "outDir": "dist",
    "rootDirs": [".", "../shared/src"],
    "types": ["node"]
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../shared" }]
}
