    "paths": {
      "@webcore/shared/*": ["packages/shared/src/*"]
    },
    "outDir": "dist",
    "rootDir": ".",
    "types": ["node"]
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../shared" }]
} 